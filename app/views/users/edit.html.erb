<!-- users#edit -->

<div class="col-sm-4 col-sm-offset-4" id="sign-up-form">

	<%= form_for @user do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
		<br>
		<div class="text-right">
		  <%= f.submit "Update", class: "btn btn-default" %>
		</div>

	<% end %>

</div>
