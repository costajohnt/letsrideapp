<!-- users#splash --> 
<body>

  <div class="wrapper">
  <div class="text-right">
    <% if logged_in? %> 
    <% @user = current_user %> 
    <%= link_to "Welcome, #{@user.name}", user_path(current_user), method: "get" %><br>
    <%= link_to "Create New Ride", new_ride_path, method: "get" %><br>
    <%= link_to "Log out", logout_path, method: "delete" %>
    <% else %>
    <div id="splash_login"><%= link_to "Log in", new_session_path, method: "get" %></div>
    <% end %>
    </div>
<!--     <div id="triangle"> -->
    <div class="splashcontent"> 
      <h1 id="splashhead">Let's Ride</h1>
        <p>
          Host, join, and discover  <br>
          group cycling rides in    <br>
          your area.  Riding <br>
          with friends is  <br>
          always better. <br>
        </p>
    </div>
<!-- </div> -->
     <div class="text-center" id="signupgroup">
     <% if current_user.blank? %>
       <%= button_to "Sign Up", new_user_path, class: "btn btn-lg", id: "signup", method: "get" %><br><p id="or">or</p><br>
       <% end %>
       <%= form_tag rides_path, { method: "get", :class => 'navbar-form', :role => 'search'} do %>
       <div class="input-group input-group-lg">
         <%= text_field_tag :q, params[:q], placeholder: "search for nearby rides", class: 'form-control'%>
         <div class="input-group-btn">
           <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
         </div>
       </div>
       <% end %>
   </div>
 </div>
</body>