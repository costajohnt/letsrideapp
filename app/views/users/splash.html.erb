<!-- users#splash --> 
<body>

  <div class="wrapper">
    <div class="text-right" id="splash_login"><%= link_to "Log in", new_session_path, method: "get" %></div>

    <div id="triangle">
 
     Let's Ride
     Create custom routes with our map feature.
     Invite your friends to join the ride.
     Search for rides in your area.  
     Find new friends to ride with.
  
    </div>
    <div class="text-center" id="signupgroup">
       <%= button_to "Sign Up", new_user_path, class: "btn btn-lg", id: "signup", method: "get" %><br>or<br>
       <%= form_tag rides_path, { method: "get", :class => 'navbar-form', :role => 'search'} do %>
       <div class="input-group input-group-lg">
         <%= text_field_tag :q, params[:q], placeholder: "search for nearby rides", class: 'form-control'%>
         <div class="input-group-btn">
           <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
         </div>
       </div>
       <% end %>
   </div>
 </div>
</body>