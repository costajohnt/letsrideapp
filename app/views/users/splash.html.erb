<!-- users#splash --> 
<body>

  <div class="wrapper">
  <div class="text-right">
    <% if logged_in? %> 
    <% @user = current_user %> 
    <%= link_to "Welcome, #{@user.name}", user_path(current_user), method: "get" %>
    <% else %>
    <div id="splash_login"><%= link_to "Log in", new_session_path, method: "get" %></div>
    <% end %>
    </div>
    <div id="splashcontent"> 
      <h1>Let's Ride</h1>
        <p>
          Host, join, and discover group <br>
          cycling rides in your area.   <br>
          Riding with friends  <br>
          always better. <br>
        </p>
    </div>

     <div class="text-center" id="signupgroup">
       <%= button_to "Sign Up", new_user_path, class: "btn btn-lg", id: "signup", method: "get" %><br>or<br>
       <%= form_tag rides_path, { method: "get", :class => 'navbar-form', :role => 'search'} do %>
       <div class="input-group input-group-lg">
         <%= text_field_tag :q, params[:q], placeholder: "search for nearby rides", class: 'form-control'%>
         <div class="input-group-btn">
           <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
         </div>
       </div>
       <% end %>
   </div>
 </div>
</body>