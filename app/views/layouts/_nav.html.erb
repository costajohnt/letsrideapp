<nav id='nav' class="navbar navbar-custom">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="logo navbar-brand" href="/">Let's Ride!</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="#" id="">

    <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %> 
        <% @user = current_user %> 
        <li><%= link_to "Welcome #{@user.name}", user_path(current_user), method: "get" %></li>
        <li><%= link_to "Create New Ride", new_ride_path, method: "get" %></li>
        <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %> 
        <li><%= link_to "Log in", new_session_path, method: "get" %></li>
        <% end %> 
      </ul>

      <div class="nav navbar-nav navbar-right">
        <%= form_tag rides_path, { method: "get", :class => 'navbar-form', :role => 'search'} do %>
        <div class="input-group">
          <%= text_field_tag :q, params[:q], placeholder: "Search", class: 'form-control'%>
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
        <% end %>
      </div>

    </div><!-- /.navbar-collapse -->

  </div><!-- /.container-fluid -->
</nav>