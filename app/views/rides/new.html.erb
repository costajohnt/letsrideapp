<!-- rides#new -->

<%= form_for @ride do |f| %>

  <div class="col-sm-4 col-sm-offset-4" id="new-post-form">

  	<%= f.label :title %>
  	<%= f.text_field :title, class: "form-control" %>
    <br>
  	<%= f.label :description %>
  	<%= f.text_area :description, class: "form-control" %>
    <br>    
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: "form-control" %>
    <br>
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: "form-control" %>
    <br>
    <%= f.label :start_time %>
    <%= f.text_field :start_time, class: "form-control" %>
    <br>
    <%= f.label :end_time %>
    <%= f.text_field :end_time, class: "form-control" %>
    <br>
    <%= f.label :start_location %>
    <%= f.text_field :start_location, class: "form-control" %>
    <br>
    <%= f.label :end_location %>
    <%= f.text_field :end_location, class: "form-control" %>
    <br>
    <%= f.label :drop %>
    <%= f.check_box :drop %>
    <br>
    <%= f.label :public %>
    <%= f.check_box :public %>
  	<br>
  	<div class="text-right">
  		<%= f.submit "Submit", class: "btn btn-default" %>
  	</div>

	</div>

<div id='map_simple' class='map'>
